{
  "name": "scripts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "anvil": "cd contracts && anvil --block-time 1 --chain-id 9999",
    "build": "cd contracts && forge build",
    "db": "node db/index.js",
    "deploy": "cd contracts && dotenv -e ../.env -- bash deployment/curved.local.sh",
    "deploy:goerli": "cd contracts && dotenv -e ../.env -- bash deployment/curved.goerli.sh",
    "dev": "conc \"pnpm run anvil --silent\" \"pnpm run deploy\"",
    "init-rewards": "node dev/initRewards.js",
    "mock-events": "node dev/mockEvents.js",
    "price-chart": "node data/priceCurve.js",
    "test": "cd contracts && forge test -vvv --fork-url https://eth-goerli.g.alchemy.com/v2/vJij3X-b5FLSP-eNIw8m25CLCEdMjQ7b"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ethers": "^5.7.1",
    "mysql2": "^3.6.1",
    "plotly": "^1.0.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "dotenv-cli": "^7.3.0"
  }
}
