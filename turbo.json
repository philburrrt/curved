{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "client#build": {
      "outputs": [
        ".next/**"
      ],
      "env": [
        "NEXT_PUBLIC_CONTRACT_ADDRESS",
        "NEXT_PUBLIC_RPC_URL",
        "DATABASE_URL",
        "NODE_ENV",
        "CLOUDFLARE_ACCOUNT_ID",
        "CLOUDFLARE_ACCESS_KEY_ID",
        "CLOUDFLARE_SECRET_ACCESS_KEY"
      ]
    },
    "indexer#build": {
      "env": [
        "DATABASE_URL",
        "WS_URL",
        "CONTRACT_ADDRESS"
      ]
    },
    "start": {
      "dependsOn": [
        "build",
        "^start"
      ],
      "outputs": [
        "build/**",
        "dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
